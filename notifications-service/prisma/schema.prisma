// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notification {
  id          String  @id @unique
  recipientId String
  content     String
  category    String
  readAt      String?
  createdAt   String

  @@index([recipientId])
}
